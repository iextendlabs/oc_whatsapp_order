{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-module" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fas fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-light"><i class="fas fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
      <div class="card-body">
        <form id="form-module" action="{{ save }}" method="post" data-oc-toggle="ajax">
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_whatsapp_button_status" id="input-status" class="form-select">
								<option value="1"{% if module_whatsapp_button_status %} selected="selected"{% endif %}>{{ text_enabled }}</option>
								<option value="0"{% if not module_whatsapp_button_status %} selected="selected"{% endif %}>{{ text_disabled }}</option>
							</select>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-whatsapp-number">{{ entry_whatsapp_number }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_whatsapp_number" value="{{ module_whatsapp_number }}" placeholder="{{ entry_whatsapp_code }}" id="input-whatsapp-number" class="form-control"/>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-whatsapp-message">{{ entry_whatsapp_message }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_whatsapp_message" value="{{ module_whatsapp_message }}" placeholder="{{ entry_whatsapp_message }}" id="input-whatsapp-message" class="form-control"/>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-whatsapp-button-color">{{ entry_whatsapp_button_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_whatsapp_button_color" value="{{ module_whatsapp_button_color }}" placeholder="{{ entry_whatsapp_button_color }}" id="input-whatsapp-button-color" class="form-control"/>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-whatsapp-button-text">{{ entry_whatsapp_button_text }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_whatsapp_button_text" value="{{ module_whatsapp_button_text }}" placeholder="{{ entry_whatsapp_button_text }}" id="input-whatsapp-button-text" class="form-control"/>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}