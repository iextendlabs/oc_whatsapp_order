{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_whatsapp_button_status" id="input-status" class="form-control">
                {% if module_whatsapp_button_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-whatsapp-number">{{ entry_whatsapp_number }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_whatsapp_number" value="{{ module_whatsapp_number }}" placeholder="{{ entry_whatsapp_code }}" id="input-whatsapp-number" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-whatsapp-message">{{ entry_whatsapp_message }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_whatsapp_message" value="{{ module_whatsapp_message }}" placeholder="{{ entry_whatsapp_message }}" id="input-whatsapp-message" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-whatsapp-button-color">{{ entry_whatsapp_button_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_whatsapp_button_color" value="{{ module_whatsapp_button_color }}" placeholder="{{ entry_whatsapp_button_color }}" id="input-whatsapp-button-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-whatsapp-button-text">{{ entry_whatsapp_button_text }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_whatsapp_button_text" value="{{ module_whatsapp_button_text }}" placeholder="{{ entry_whatsapp_button_text }}" id="input-whatsapp-button-text" class="form-control"/>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}